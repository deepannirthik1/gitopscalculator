{
  "family": "DevClusterTask",
  "networkMode": "awsvpc",
  "executionRoleArn": "arn:aws:iam::364179845524:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "gitopscalculator",
      "image": "$ECR_REGISTRY/$ECR_REPOSITORY:$IMAGE_TAG",
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/DevClusterTask",
          "awslogs-region": "ap-south-1",
          "awslogs-stream-prefix": "DevClusterTask"
        }
      }
    }
  ],
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "1",
  "memory": "1GB"
}
